---
const {
	logoLabel = "Adilie",
	nav,
	transparent = false,
	currentLang = "en",
} = Astro.props;
---

<header class:list={["site-header", { "is-transparent": transparent }]}>
	<div class="container header-content">
		<a href="/" class="logo" aria-label={logoLabel}>
			<img src="/images/logo.svg" alt={logoLabel} />
		</a>
		{
			nav && (
				<div class="header-actions">
					<nav class="nav">
						<a href="#home">{nav.home}</a>
						<a href="#projects">{nav.projects}</a>
						<a href="#about">{nav.about}</a>
						<a href="#contact">{nav.contact}</a>
					</nav>
				</div>
			)
		}
		<div class="lang-switcher">
			<a
				href="/"
				class:list={[
					"lang-link",
					{ "is-active": currentLang === "en" },
				]}
			>
				EN
			</a>
			<a
				href="/fr"
				class:list={[
					"lang-link",
					{ "is-active": currentLang === "fr" },
				]}
			>
				FR
			</a>
		</div>
	</div>
</header>
