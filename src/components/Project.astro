---
import "../styles/project.css";

const {
	title,
	dates,
	description,
	tags = [],
	imageSrc,
	imageAlt,
	href,
} = Astro.props;
---

<div class="project-showcase-inner">
	<div class="project-info">
		<div class="project-meta">
			<span class="project-meta-dot" aria-hidden="true"></span>
			<span class="project-meta-dates">{dates}</span>
		</div>
		<div class="project-text">
			<h3 class="project-name">{title}</h3>
			<p class="project-description">{description}</p>
		</div>
		{
			tags && tags.length > 0 && (
				<div class="project-tags">
					{tags.map((tag) => (
						<span class="project-tag">{tag}</span>
					))}
				</div>
			)
		}
	</div>
	<div class="project-media">
		{
			href ? (
				<a
					href={href}
					class="project-media-link"
					aria-label={`Open project ${title}`}
				>
					<div class="project-media-frame">
						<img src={imageSrc} alt={imageAlt} loading="lazy" />
					</div>
				</a>
			) : (
				<div class="project-media-frame">
					<img src={imageSrc} alt={imageAlt} loading="lazy" />
				</div>
			)
		}
	</div>
</div>
